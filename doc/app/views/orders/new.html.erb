<main class="order">
  <div class="container">
    <%= form_tag to_somewhere do %>

      <article>
        <% if flash[:error].present? %>
          <div id="error_explanation">
            <p><%= flash[:error] %></p>
          </div>
        <% end %>
      </article>

      <%= hidden_field_tag(:stripeEmail) %>
      <%= hidden_field_tag(:stripeToken) %>
    <% end %>
    
    <checkout name="<%= @product.title %>"
              amount="<%= @product.price %>">
    </checkout>
  </div>
</main>
